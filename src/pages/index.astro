            <!-- Text -->
            <p class="lead text-muted">
              <b>Administración de personal.</b> Administra el ciclo de vida del personal con:
            </p>
            <!-- List -->
            <ul class="list-unstyled mt-4 mb-0">
              <li class="py-2">
                <div class="d-flex align-items-center">
                  <div>
                    <div class="icon icon-xs icon-shape bg-success text-white text-base rounded-circle me-3">
                      <i class="bi bi-check"></i>
                    </div>
                  </div>
                  <div>
                    <span class="h6 font-semibold mb-0">Prealta</span>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="d-flex align-items-center">
                  <div>
                    <div class="icon icon-xs icon-shape bg-success text-white text-base rounded-circle me-3">
                      <i class="bi bi-check"></i>
                    </div>
                  </div>
                  <div>
                    <span class="h6 font-semibold mb-0">Contratos</span>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="d-flex align-items-center">
                  <div>
                    <div class="icon icon-xs icon-shape bg-success text-white text-base rounded-circle me-3">
                      <i class="bi bi-check"></i>
                    </div>
                  </div>
                  <div>
                    <span class="h6 font-semibold mb-0">Expedientes</span>
                  </div>
                </div>
              </li>
